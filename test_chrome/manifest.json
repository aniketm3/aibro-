{
    "manifest_version": 3,
    "name": "Auto Screen Capture",
    "version": "1.0",
    "description": "Takes screen captures every few seconds.",
    "permissions": ["activeTab", "scripting", "storage", "downloads"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"]
  }
  